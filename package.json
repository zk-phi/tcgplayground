{
  "name": "dm-playground",
  "private": true,
  "scripts": {
    "dev": "concurrently 'postcss ./src/styles.css -o ./src/styles.min.css -w' 'vite'",
    "build": "postcss ./src/styles.css -o ./src/styles.min.css && vite build --config ./dmdeckmaker.vite.config.js",
    "build-demo": "postcss ./src/styles.css -o ./src/styles.min.css && vite build",
    "preview": "vite preview",
    "release": "echo javascript:$(cat ./dist/bundle.js) > ./release/bookmarklet"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.4",
    "@preact/signals": "^2.0.1",
    "concurrently": "^9.1.2",
    "drag-drop-touch": "zk-phi/dragdroptouch#5f857f9",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-minify": "^1.1.0",
    "postcss-nested": "^7.0.2",
    "preact": "^10.25.4",
    "vite": "^6.0.7"
  }
}
